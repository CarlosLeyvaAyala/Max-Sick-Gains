            "min": -240,
            "max": 240,
            "step": 5,
            "formatString": "{0}"
          }
        },
        {
          "text": "H. align",
          "type": "enum",
          "help": "Where to put the widget on screen.",
          "valueOptions": {
            "options": [
              "Left",
              "Center",
              "Right"
            ]
          }
        },
        {
          "text": "V. align",
          "type": "enum",
